{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": [
        "src/@types",
        "./node_modules/@types",
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  